#jinja2: trim_blocks: True, lstrip_blocks: True
{{ ansible_managed | comment }}

Include {{ sshd_confdir | mandatory }}/sshd_config.d/*.conf

{% for _sshd_port in sshd_port %}
Port {{ _sshd_port }}
{% endfor %}
{% if sshd_ip is defined %}
{%   for _sshd_ip in sshd_ip %}
ListenAddress {{ _sshd_ip }}
{%   endfor %}
{% endif %}

{% if sshd_host_key_type is defined %}
{%   for _sshd_host_key_type in sshd_host_key_type %}
HostKey {{ sshd_confdir }}/ssh_host_{{ _sshd_host_key_type }}_key
{%   endfor %}
{% endif %}

Subsystem  sftp  /usr/lib/openssh/sftp-server -f AUTHPRIV -l INFO
